
    <article>
        <form class="pure-form pure-form-aligned formulaire">
            <h1 align="center">S'inscrire</h1>
            <fieldset>
                <div class="pure-control-group">
                    <label for="aligned-name">Nom <span class="rouge">*</span></label>
                    <input type="text" id="aligned-name" placeholder="Nom" required/>
                </div>
                <div class="pure-control-group">
                    <label for="aligned-firstname">Prénom <span class="rouge">*</span></label>
                    <input type="text" id="aligned-firstname" placeholder="Prénom" required/>
                </div>
                <div class="pure-control-group">
                    <label for="aligned-pseudo">Pseudo <span class="rouge">*</span></label>
                    <input type="text" id="aligned-pseudo" placeholder="Pseudo" required/>
                </div>
                <div class="pure-control-group">
                    <label for="aligned-email">E-mail <span class="rouge">*</span></label>
                    <input type="email" id="aligned-email" placeholder="Votre adresse e-mail" required/>
                </div>
                <div class="pure-control-group">
                    <label for="aligned-password">Mot de passe <span class="rouge">*</span></label>
                    <input type="password" id="aligned-password" placeholder="Mot de passe" required/>
                </div>
                <div class="pure-control-group">
                    <label for="aligned-confpassword">Confirmation <span class="rouge">*</span></label>
                    <input type="password" id="aligned-confpassword" placeholder="Confirmation" required/>
                </div>
                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary">S'inscrire</button>
                </div>
            </fieldset>
        </form>
    </article>